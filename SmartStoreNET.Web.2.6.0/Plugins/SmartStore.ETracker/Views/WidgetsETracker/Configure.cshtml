@{
    Layout = "";
}
@model SmartStore.ETracker.Models.ConfigurationModel
@using SmartStore.Web.Framework;
	
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    
    <div class="alert alert-info">
        @Html.Raw(@T("Plugins.Widgets.ETracker.AdminInstruction"))
    </div>
    
<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.SecurityCode)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.SecurityCode)
            @Html.ValidationMessageFor(model => model.SecurityCode)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">&nbsp;</td>
        <td class="adminData">
            <button type="submit" name="save" class="btn btn-primary" value="save">
                <i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")
            </button>
        </td>
    </tr>
</table>
}