@model PdfProductModel
@using SmartStore.PdfExport.Models;
@{
    Layout = "~/Views/Shared/_Print.cshtml";
}

<style type="text/css">
	html, body {
		height: 100% !important;
	}
</style>

<div class="container" style="height:95%">
    
    @Html.Widget("pdfcatalog_cover_top")

    @if (Model.LogoUrl.HasValue())
    {
        <div class="text-center margin-bottom-50">
            <img src="@Model.LogoUrl" />
            <br />
        </div>
    }
    
    @Html.Widget("pdfcatalog_cover_logo_after")

    <h1 class="text-center" style="font-size: 80px; font-weight: 400; padding-top: 200px">@((string)Model.Store.Name)</h1>

	@Html.Widget("pdfcatalog_cover_storename_after")

	<div style="position: fixed; bottom: 0; width: 100%">
		@Html.Action("PdfReceiptFooter", "Common", new { area = "", isPartial = true })
	</div>

</div>
