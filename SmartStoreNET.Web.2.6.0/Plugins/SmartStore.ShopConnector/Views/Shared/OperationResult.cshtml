@using SmartStore.ShopConnector.Models;
@model OperationResultModel
@{
	Layout = "";
	Html.AddCssFileParts(true, Url.Content("~/Plugins/SmartStore.ShopConnector/Content/smartstore.shopconnector.css"));
}
@if(Model.HasError)
{
	<div class="alert alert-error">
		<button class="close" data-dismiss="alert">&#215;</button>
		<div>@Html.Raw(Model.ShortMessage)</div>
	</div>

	if (Model.Description.HasValue())
	{
		<div>
			<pre class="error-description">@Html.Raw(Model.Description)</pre>
		</div>
	}
}
else
{
	<div class="alert alert-info">
		<button class="close" data-dismiss="alert">&#215;</button>
		<div>@Html.Raw(Model.ShortMessage)</div>
		<div>@Html.Raw(Model.Description)</div>
	</div>
}