@using SmartStore.ShopConnector.Models;
@using SmartStore.ShopConnector.Core;
@using SmartStore.Web.Framework;
@model ProductFileSelectModel
@{
	Layout = null;	
	Html.AddCssFileParts(true, Url.Content("~/Plugins/SmartStore.ShopConnector/Content/smartstore.shopconnector.css"));
}

<div>
	<form method="GET" class="connection-form" action="@Url.Action("ProductImport", "ShopConnectorImport", new { area = ShopConnectorCore.SystemName })">
		<input type="hidden" id="id" name="id" value="@Model.Id" />

		<table class="adminContent">
			<tr>
				<td class="adminTitle">
					@Html.SmartLabelFor(model => model.ImportFile)
				</td>
				<td class="adminData">
					@Html.DropDownListFor(model => model.ImportFile, Model.AvailableImportFiles, new { @class = "control-large" })

					<div class="btn-below">
						<a href="#" data-url="@Url.Action("ProductDataDownload", "ShopConnectorImport", new { area = ShopConnectorCore.SystemName, id = Model.Id })" class="product-data-load btn" download>
							<i class="fa fa-fw fa-file-text-o"></i>&nbsp;@T("Common.Download")
						</a>
						<button type="button" data-url="@Url.Action("ProductDataDelete", "ShopConnectorImport", new { area = ShopConnectorCore.SystemName, id = Model.Id })" class="product-data-delete btn btn-danger" data-dismiss="modal">
							<i class="fa fa-trash-o"></i>&nbsp;@T("Admin.Common.Delete")
						</button>
					</div>
				</td>
			</tr>
		</table>
	</form>
</div>