@using SmartStore.Web.Framework;
@using SmartStore.Web.Framework.UI;
@using SmartStore.Sofortueberweisung.Models;
@model ConfigurationModel
@{
    Layout = "";
	Html.AddCssFileParts(true, "~/Plugins/SmartStore.Sofortueberweisung/Content/smartstore.sofortueberweisung.css");
}

<div class="plugin-configuration">
	<div>
		<div class="alert alert-info">
			<button class="close" data-dismiss="alert">×</button>
			@Html.Raw(@T("Plugins.Payments.Sofortueberweisung.AdminInstruction"))
		</div>
	</div>
	<div>
		<a href="https://www.sofort.com/" target="_blank">
			<img src="@Url.Content("~/Plugins/SmartStore.Sofortueberweisung/Content/images/logo200x75.png")" alt="SOFORT Überweisung" />
		</a>
	</div>
</div>

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
	<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.ApiConfigKey)
        </td>
        <td class="adminData">
			@Html.SettingOverrideCheckbox(model => model.ApiConfigKey)
            @Html.TextBoxFor(model => model.ApiConfigKey, new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.ApiConfigKey)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.PaymentReason1)
        </td>
        <td class="adminData">
			@Html.SettingOverrideCheckbox(model => model.PaymentReason1)
            @Html.DropDownListFor(model => model.PaymentReason1, Model.AvailablePaymentReason)
            @Html.ValidationMessageFor(model => model.PaymentReason1)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.PaymentReason2)
        </td>
        <td class="adminData">
			@Html.SettingOverrideCheckbox(model => model.PaymentReason2)
            @Html.DropDownListFor(model => model.PaymentReason2, Model.AvailablePaymentReason)
            @Html.ValidationMessageFor(model => model.PaymentReason2)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.AdditionalFee)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.AdditionalFee)
            @Html.ValidationMessageFor(model => model.AdditionalFee)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.AdditionalFeePercentage)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.AdditionalFeePercentage)
            @Html.ValidationMessageFor(model => model.AdditionalFeePercentage)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.ValidateOrderTotal)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.ValidateOrderTotal)
            @Html.ValidationMessageFor(model => model.ValidateOrderTotal)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.SaveWarnings)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.SaveWarnings)
            @Html.ValidationMessageFor(model => model.SaveWarnings)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.ShowFurtherInfo)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.ShowFurtherInfo)
            @Html.ValidationMessageFor(model => model.ShowFurtherInfo)
        </td>
    </tr>
    <tr class="further-info-url">
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.FurtherInfoUrl)
        </td>
        <td class="adminData">
			@Html.SettingOverrideCheckbox(model => model.FurtherInfoUrl)
            @Html.TextBoxFor(model => model.FurtherInfoUrl, new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.FurtherInfoUrl)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.CustomerProtection)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.CustomerProtection)
            @Html.ValidationMessageFor(model => model.CustomerProtection)
        </td>
    </tr>
    <tr class="customer-protection-url">
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.CustomerProtectionInfoUrl)
        </td>
        <td class="adminData">
			@Html.SettingOverrideCheckbox(model => model.CustomerProtectionInfoUrl)
            @Html.TextBoxFor(model => model.CustomerProtectionInfoUrl, new { @class = "input-large" })
            @Html.ValidationMessageFor(model => model.CustomerProtectionInfoUrl)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.UseTestAccount)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.UseTestAccount)
            @Html.ValidationMessageFor(model => model.UseTestAccount)
        </td>
    </tr>
    <tr class="test-account-data">
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.AccountHolder)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.AccountHolder)
            @Html.ValidationMessageFor(model => model.AccountHolder)
        </td>
    </tr>
    <tr class="test-account-data">
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.AccountNumber)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.AccountNumber)
            @Html.ValidationMessageFor(model => model.AccountNumber)
        </td>
    </tr>
    <tr class="test-account-data">
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.AccountBankCode)
        </td>
        <td class="adminData">
            @Html.SettingEditorFor(model => model.AccountBankCode)
            @Html.ValidationMessageFor(model => model.AccountBankCode)
        </td>
    </tr>
    <tr class="test-account-data">
        <td class="adminTitle">
            @Html.SmartLabelFor(model => model.AccountCountry)
        </td>
        <td class="adminData">
			@Html.SettingOverrideCheckbox(model => model.AccountCountry)
			@Html.DropDownList("AccountCountry", new List<SelectListItem> {
				new SelectListItem { Selected = true, Text = @T("Plugins.Payments.Sofortueberweisung.Germany"), Value = "DE" }
			})
            @Html.ValidationMessageFor(model => model.AccountCountry)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">&nbsp;</td>
        <td class="adminData">
            <button type="submit" name="save" class="btn btn-primary" value="save">
                <i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")
            </button>
        </td>
    </tr>
	</table>
}

<script type="text/javascript">
	$(document).ready(function () {

		$('#@Html.FieldIdFor(model => model.UseTestAccount)').change(function () {
			$('.test-account-data').toggle($(this).is(':checked'));
		}).trigger('change');

		$('#@Html.FieldIdFor(model => model.ShowFurtherInfo)').change(function () {
			$('.further-info-url').toggle($(this).is(':checked'));
		}).trigger('change');

		$('#@Html.FieldIdFor(model => model.CustomerProtection)').change(function () {
			$('.customer-protection-url').toggle($(this).is(':checked'));
		}).trigger('change');

	});
</script>