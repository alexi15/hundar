@using SmartStore.Web.Framework;
@model SmartStore.Plugin.Sms.Verizon.Models.SmsVerizonModel
@{
	Layout = "";
}

@using (Html.BeginForm())
{
	<table class="adminContent">
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.Enabled)
			</td>
			<td class="adminData">
				@Html.EditorFor(model => model.Enabled)
				@Html.ValidationMessageFor(model => model.Enabled)
			</td>
		</tr>
		<tr> 	
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.Email)
			</td>
			<td class="adminData">
				@Html.EditorFor(model => model.Email)
				@Html.ValidationMessageFor(model => model.Email)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				&nbsp;
			</td>
			<td class="adminData">
				<button type="submit" name="save" value="save" class="btn btn-primary">
					<i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")
				</button>
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<div class="admin-config-group">
					<div class="title">@T("Plugins.Sms.Verizon.SendTest.Hint")</div>
				</div>
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				@Html.SmartLabelFor(model => model.TestMessage)
			</td>
			<td class="adminData">
				@Html.EditorFor(model => model.TestMessage)
				@Html.ValidationMessageFor(model => model.TestMessage)
			</td>
		</tr>
		<tr>
			<td class="adminTitle">
				&nbsp;
			</td>
			<td class="adminData">
				<button type="submit" name="test-sms" value="test-sms" class="btn">
					<i class="fa fa-envelope"></i>&nbsp;@T("Plugins.Sms.Verizon.SendTest")
				</button>
			</td>
		</tr>
		@if (Model.TestSmsResult.HasValue())
		{
			<tr>
				<td colspan="2">
					<div class="alert alert-@(Model.ErrorResult ? "error" : "info")">
						<button class="close" data-dismiss="alert">&#215;</button>
						@Model.TestSmsResult
					</div>
				</td>
			</tr>
		}
	</table>
}