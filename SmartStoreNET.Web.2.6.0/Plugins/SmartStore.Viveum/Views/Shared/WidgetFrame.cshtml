@using SmartStore;
@using SmartStore.Viveum.Models;
@model WidgetFrameModel
@{
	var fontFamily = GetThemeVariable<string>("SansFontFamily", "'Segoe UI', Tahoma, 'Helvetica Neue', Helvetica, Arial, 'sans-serif'");
}
<!DOCTYPE html>
<html>
<head>
	<title>Viveum Payment Widget</title>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8" />

	@*<script type="text/javascript" src="~/Scripts/jquery-2.1.1.min.js"></script>*@
	<script type="text/javascript">
		var wpwlOptions = {
			locale: "@Model.LanguageSeoCode",
			style: "@Model.WidgetStyle",
			autofocus: "@Model.AutoFocus",
		};
	</script>
	<script type="text/javascript" src="@Model.WidgetUrl"></script>
	<style type="text/css">
		.wpwl-label, .wpwl-control, .wpwl-control option {
			font-family: @Html.Raw(fontFamily);
		}
		.wpwl-label {
			padding-bottom: 2px;
		}
		@if (Model.WidgetBackgroundColor.HasValue() && Model.SetWidgetBackgroundColor)
		{
		<text>
		.wpwl-form {
			background-color: @(Model.WidgetBackgroundColor);
		}
		</text>
		}
	</style>
</head>
<body>
	<form action="@Model.ShopperResultUrl" class="paymentWidgets" style="visibility: hidden;">@Model.PaymentBrands</form>
</body>
</html>